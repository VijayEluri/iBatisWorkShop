<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
                           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd">

    <!-- iBATIS 3 -->
    <bean id="transactionFactory"
          class="cz.novoj.ibatis.spring.SpringTransactionFactory">
        <constructor-arg index="0" ref="dataSource"/>
    </bean>

    <bean id="ibatisEnvironment" class="org.apache.ibatis.mapping.Environment">
        <constructor-arg index="0" value="spring"/>
        <constructor-arg index="1" ref="transactionFactory"/>
        <constructor-arg index="2" ref="dataSource"/>
    </bean>

    <bean id="sqlSessionFactory" class="cz.novoj.ibatis.spring.SqlSessionFactoryBean">
        <property name="configLocation"
                  value="classpath:META-INF/iBatis/SpringMapperConfig.xml"/>
        <property name="environment" ref="ibatisEnvironment"/>
    </bean>

</beans>